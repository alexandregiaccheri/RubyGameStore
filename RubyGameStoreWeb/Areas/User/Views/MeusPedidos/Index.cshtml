@model IEnumerable<PedidoCabecalho>
@{
    ViewData["Title"] = "Meus Pedidos";
}

<div class="mt-3" style="/*border: solid 1px black; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px*/">
    <h2 class="text-center p-2">Meus Pedidos</h2>
</div>
<hr />

<div class="container mt-3">
    <table class="table table-hover my-auto" style="vertical-align: middle" width="100%" id="indexPedidos">
        <thead>
            <tr class="my-auto">
                <th data-priority="1">Pedido</th>
                <th data-priority="1">Data</th>
                <th data-priority="5">Status</th>
                <th data-priority="6">Pagamento</th>
                <th data-priority="4">Total</th>
                <th class="col-1" data-priority="2"></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
<script src="~/js/meuspedidos.js"></script>
}