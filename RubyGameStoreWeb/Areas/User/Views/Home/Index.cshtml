<div class="row text-center py-2" style="background-color:#111; border: solid 2px #000; border-radius: 7px;">
    <h1 class="fw-bold text-white col-12" style="font-family:Play">Jogos em Destaque</h1>
</div>

<div class="row" style="margin-bottom: 80px">
    @foreach (var obj in Model)
    {
        <div class="col-12 col-md-6 col-lg-4 col-xxl-3 p-2 d-flex flex-column home-card" style="height: 470px">
            <a asp-area="User" asp-controller="VerProduto" asp-action="Detalhes" asp-route-ProdutoId="@obj.Id" class="mb-2" style="width:100%; height:40%">
                <div class="mb-2 rounded-2" style="background: url('@obj.BoxArt.Replace("\\", "/")');
                                            height: 100%; width: 100%; background-size: cover;
                                            background-position: center;">
                </div>
            </a>
            <div class="px-1" style="height:45%">
                <div style="height:auto">
                    <div class="d-flex justify-content-between" style="width:inherit">
                        <div class="my-auto">
                            <h3 class="text-white" style="font-family:Play"><strong>@obj.Titulo</strong></h3>
                        </div>
                        <div class="col-3 text-end">
                            @if (obj.Plataforma == Plataforma.NSW)
                            {
                                <img src="~/images/assets/plataformas/nintendo.svg" style="height: 70px; width: 70px; filter: invert(1) brightness(10)">
                            }
                            @if (obj.Plataforma == Plataforma.PC)
                            {
                                <img src="~/images/assets/plataformas/PC.svg" class="p-1" style="height: 70px; width: 70px; filter: invert(1) brightness(10)">
                            }
                            @if (obj.Plataforma == Plataforma.PS4 || obj.Plataforma == Plataforma.PS5)
                            {
                                <img src="~/images/assets/plataformas/playstation.svg" style="height: 70px; width: 70px; filter: invert(1) brightness(10)">
                            }
                            @if (obj.Plataforma == Plataforma.XONE || obj.Plataforma == Plataforma.XSXS)
                            {
                                <img src="~/images/assets/plataformas/xbox.svg" class="p-1" style="height: 70px; width: 70px; filter: invert(1) brightness(10)">
                            }
                        </div>
                    </div>
                    <p class="text-white" style="font-family:Play">
                        Desenvolvedor: @obj.Desenvolvedor <br>
                        Distribuidor: @obj.Distribuidor <br>
                        Plataforma: @obj.Plataforma (@obj.DataLancamento.ToString("yyyy"))
                    </p>
                </div>
            </div>
            <div class="row mb-3" style="height:15%">
                @if (obj.PrecoPromo != 0)
                {
                    <h5 class="text-end" style="color: lightgreen; font-family:Play; margin-top: 10px; margin-right: 8px">
                        <small><s>R$ @obj.PrecoNormal.ToString("N2")</s></small> <b>R$ @obj.PrecoPromo.ToString("N2")</b>
                    </h5>
                }
                else
                {
                    <h5 class="text-end" style="color: lightgreen; font-family:Play; margin-top: 10px; margin-right: 8px">
                        <b>R$ @obj.PrecoNormal.ToString("N2")</b>
                    </h5>
                }
                <a class="btn btn-primary col-11 mx-auto" asp-controller="VerProduto" asp-action="Detalhes" asp-route-ProdutoId="@obj.Id">Ver Detalhes</a>
            </div>
        </div>
    }
</div>
