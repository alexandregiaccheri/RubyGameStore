@model IEnumerable<Produto>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row mt-3">
    @foreach (var obj in Model)
    {
        <div class="col-lg-3 col-md-4 col-sm-6 mt-3">
            <div class="col-12 py-1" style="border:1px solid; border-radius: 10px">
                <div class="card p-2 justify-content-between" style="height:535px; background-color: #f8f8f8; border-radius: 10px">
                    <div style="height:300px">
                        <img src="@obj.ImgCapaUrl" class="rounded" style="height:100%; width:100%; object-fit:contain; position: relative; top:0">
                    </div>
                    <div class="pt-2 row align-content-center">
                        <p class="card-title h4 text-primary" style="">@obj.Titulo</p>
                        <p class="card-title text-secondary" style="line-height: 0.9">Desenvolvedor: @obj.Desenvolvedor</p>
                        <p class="card-title text-secondary" style="line-height: 0.9">Distrubuidor: @obj.Distribuidor</p>
                        <p class="card-title h5 text-primary" style="line-height: 0.8">R$ @obj.Preco.ToString("N2")</p>
                        <p class="card-title text-muted" style="line-height:0.8">Em até 10x de sem juros no cartão</p>
                        <a class="btn btn-primary mx-auto rounded col-10 mt-2">Ver mais</a>
                    </div>
                    
                </div>
            </div>
        </div>
    }
</div>