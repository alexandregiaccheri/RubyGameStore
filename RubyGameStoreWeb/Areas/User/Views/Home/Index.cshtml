@model IEnumerable<Produto>
@using RubyGameStore.Helper.StaticNames;
@{
    ViewData["Title"] = "Home Page";
}
<style>
    body {
        background-image: radial-gradient(circle at center top, rgba(120, 0, 0, 100%) 0%, rgba(10, 10, 10, 100%) 35%);
        background-size: 100%;
        background-repeat: no-repeat;
        background-position: top;
    }

    .home-card {
        background-color: #222;
        border: solid 2px #000;
        border-radius: 7px;
        transition: all linear 0.1s;
    }

        .home-card:hover {
            background-color: #300;
        }

    #nswitch {
        cursor: pointer;
        background-color: #222;
        border: solid 2px #000;
        border-radius: 7px;
        transition: all linear 0.2s;
    }

        #nswitch:hover {
            background-color: #555;
            background-image: url('/images/assets/home/nsw.jpg');
            background-position: center;
            background-size: cover;
            background-blend-mode: overlay;
            transition: 0.15s;
        }

    #computer {
        cursor: pointer;
        background-color: #222;
        border: solid 2px #000;
        border-radius: 7px;
        transition: all linear 0.2s;
    }

        #computer:hover {
            background-color: #555;
            background-image: url('/images/assets/home/gamingpc.jpg');
            background-position: center;
            background-size: cover;
            background-blend-mode: overlay;
            transition: 0.15s;
        }

    #ps4 {
        cursor: pointer;
        background-color: #222;
        border: solid 2px #000;
        border-radius: 7px;
        transition: all linear 0.2s;
    }

        #ps4:hover {
            background-color: #555;
            background-image: url('/images/assets/home/ps4.jpg');
            background-position: center;
            background-size: cover;
            background-blend-mode: overlay;
            transition: 0.15s;
        }

    #ps5 {
        cursor: pointer;
        background-color: #222;
        border: solid 2px #000;
        border-radius: 7px;
        transition: all linear 0.2s;
    }

        #ps5:hover {
            background-color: #555;
            background-image: url('/images/assets/home/ps5.jpg');
            background-position: center;
            background-size: cover;
            background-blend-mode: overlay;
            transition: 0.15s;
        }

    #xone {
        cursor: pointer;
        background-color: #222;
        border: solid 2px #000;
        border-radius: 7px;
        transition: all linear 0.2s;
    }

        #xone:hover {
            background-color: #555;
            background-image: url('/images/assets/home/xone.jpg');
            background-position: center;
            background-size: cover;
            background-blend-mode: overlay;
            transition: 0.15s;
        }

    #xseries {
        cursor: pointer;
        background-color: #222;
        border: solid 2px #000;
        border-radius: 7px;
        transition: all linear 0.2s;
    }

        #xseries:hover {
            background-color: #555;
            background-image: url('/images/assets/home/xseries.jpg');
            background-position: center;
            background-size: cover;
            background-blend-mode: overlay;
            transition: 0.15s;
        }
</style>

<div class="row text-center py-2 align-middle" style="background-color:#444; border: solid 2px #000; border-radius: 7px; background-image:url('/images/assets/home/controllers.jpg'); background-position:center; background-size:cover; background-blend-mode:overlay">
    <div class="container row pb-3 mx-auto" style="width:auto">
        <h2 class="text-white text-center" style="font-family:Play">Bem vindo a Ruby Game Store!</h2>
        <h5 class="text-white text-center" style="font-family:Play">Aqui você encontra os melhores jogos, lançamentos e muito mais!</h5>
        <p class="text-white text-center" style="font-family:Play">
            Não importa se você joga no PC, Playstation, Nintendo Switch ou Xbox, nós temos os melhores games
            para atender suas necessidades! Procure pelo nosso catálogo por plataforma ou gênero favorito e aproveite! São muitas ofertas e lançamentos no seu alcançe!
        </p>
        <div class="row mx-auto">
            <div class="col-6 text-end">
                <a class="btn btn-primary" style="min-width:90px">Consoles</a>
            </div>
            <div class="col-6 text-start">
                <a class="btn btn-primary" style="min-width:90px">Gêneros</a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="pt-2 pb-3 col-12 col-lg-7" style="background-color:#222; border: solid 2px #000; border-radius: 7px">
        <h2 class="text-white text-center mb-2 fw-bold" style="font-family:Play">Lançamentos</h2>
        <div class="col-12">
            <div id="lancamentos" class="carousel slide carousel-fade" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active position-relative" data-bs-interval="500">
                        <img src="@Model.First().BoxArt" class="d-block w-100" style="filter:brightness(75%)">
                        <div class="carousel-caption position-absolute bottom-0 start-0" style="width:fit-content">
                            <h4 class="px-3 fw-bolder text-start" style="color:#fff; text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black; font-family:Play">R$ @Model.First().PrecoNormal.ToString("N2")</h4>
                        </div>
                    </div>
                    @foreach (var obj in Model.ToList().GetRange(0, 5))
                    {
                        <div class="carousel-item position-relative" data-bs-interval="8000">
                            <img src="@obj.BoxArt" class="w-100" style="aspect-ratio: 16/9; filter: brightness(75%)">
                            <div class="carousel-caption position-absolute bottom-0 start-0" style="width:fit-content">
                                <h4 class="px-3 fw-bolder text-start" style="color:#fff; text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black; font-family:Play">R$ @obj.PrecoNormal.ToString("N2")</h4>
                            </div>
                        </div>
                    }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#lancamentos" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#lancamentos" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </div>

    <div class="col-12 col-lg-5 py-1 py-xl-3 px-3 d-flex flex-column justify-content-center" style="background-color: #222; border: 2px solid black; border-radius: 7px">
        <a style="font-family:Play; font-size:2rem; text-align:center">Alexandre Giaccheri</a>
        <a style="font-family:Play; font-size:1.5rem; text-align:center">Desenvolvedor FullStack</a>
        <hr class="mx-auto w-75" />
        <a style="font-family:Play; font-size:1.2rem; text-align:center"><i class="bi bi-github"></i> &nbsp; GitHub: @Html.Raw("@")alexandregiaccheri</a>
        <a style="font-family:Play; font-size:1.2rem; text-align:center"><i class="bi bi-linkedin"></i> &nbsp; LinkedIn: in/alexandregiaccheri</a>
        <a style="font-family:Play; font-size:1.2rem; text-align:center"><i class="bi bi-envelope"></i> &nbsp; Email: contato@xande.dev</a>
        <a style="font-family:Play; font-size:1.2rem; text-align:center"><i class="bi bi-telephone"></i> &nbsp; Telefone: (14) 99680-5658</a>
        <a style="font-family:Play; font-size:1.2rem; text-align:center"><i class="bi bi-download"></i> &nbsp; Baixar Currículo (PDF)</a>
        <hr class="w-75 mx-auto" />
        <div class="d-flex mx-auto" style="width:fit-content; border-radius:10px">
            <div class="">
                <img class="p-2" style="height:75px" src="~/images/assets/home/NET_Core_Logo.svg" />
            </div>
            <div class="">
                <img class="p-2" style="height:75px" src="~/images/assets/home/CSS3_and_HTML5_logos_and_wordmarks.svg" />
            </div>
            <div class="">
                <img class="p-2" style="height:75px" src="~/images/assets/home/Bootstrap_logo.svg" />
            </div>
            <div class="">
                <img class="p-2" style="height:75px" src="~/images/assets/home/Unofficial_JavaScript_logo_2.svg" />
            </div>
        </div>
    </div>
</div>

