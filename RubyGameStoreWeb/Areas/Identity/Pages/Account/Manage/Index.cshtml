@page
@model IndexModel
@{
    Layout = "_Layout.cshtml";
}
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<form id="profile-form" method="post">
    <div class="row">
        <div class="col-md-12 row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating col-md-12 pb-2">
                <input asp-for="Username" class="form-control" disabled />
                <label asp-for="Username" class="form-label mx-3"></label>
            </div>
            <div class="form-floating col-md-6 pb-2">
                <input asp-for="Input.Nome" class="form-control" />
                <label asp-for="Input.Nome" class="form-label mx-3"></label>
                <span asp-validation-for="Input.Nome" class="text-danger"></span>
            </div>
            <div class="form-floating col-md-6 pb-2">
                <input asp-for="Input.Sobrenome" class="form-control" />
                <label asp-for="Input.Sobrenome" class="form-label mx-3"></label>
                <span asp-validation-for="Input.Sobrenome" class="text-danger"></span>
            </div>
            <div class="form-floating col-md-6 pb-2">
                <input asp-for="Input.Telefone" class="form-control" />
                <label asp-for="Input.Telefone" class="form-label mx-3"></label>
                <span asp-validation-for="Input.Telefone" class="text-danger"></span>
            </div>
            <div class="form-floating col-md-6 pb-2">
                <input asp-for="Input.Logradouro" class="form-control" />
                <label asp-for="Input.Logradouro" class="form-label mx-3"></label>
                <span asp-validation-for="Input.Logradouro" class="text-danger"></span>
            </div>
            <div class="form-floating col-md-6 pb-2">
                <input asp-for="Input.Cidade" class="form-control" />
                <label asp-for="Input.Cidade" class="form-label mx-3"></label>
                <span asp-validation-for="Input.Cidade" class="text-danger"></span>
            </div>
            <div class="form-floating col-md-6 pb-2">
                <input asp-for="Input.Estado" class="form-control" />
                <label asp-for="Input.Estado" class="form-label mx-3"></label>
                <span asp-validation-for="Input.Estado" class="text-danger"></span>
            </div>
            <div class="form-floating col-md-6 pb-2">
                <input asp-for="Input.CEP" class="form-control" />
                <label asp-for="Input.CEP" class="form-label mx-3"></label>
                <span asp-validation-for="Input.CEP" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-25 btn btn-lg btn-primary">Save</button>
        </div>
    </div>
</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
