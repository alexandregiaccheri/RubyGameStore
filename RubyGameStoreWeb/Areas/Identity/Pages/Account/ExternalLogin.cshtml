@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Criar Conta";
}

<h1 class="pt-2">@ViewData["Title"]</h1>
<h2 id="external-login-title">Associe sua conta do @Model.ProviderDisplayName</h2>
<hr />

<p id="external-login-description" class="text-info">
    Seu login com <strong>@Model.ProviderDisplayName</strong> foi realizado com sucesso.
    Por favor, confira o endereço de email a ser usado neste site e clique no botão abaixo.
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="email" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Confirmar</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
