
@{
    ViewData["Title"] = "Gerenciar Produtos";
}

<div class="container row mt-3">
    <div class="col-6">
        <h2>Gerenciar Produtos</h2>
    </div>
    <div class="col-6 text-end my-auto">
        <a asp-action="Upsert" class="btn btn-primary"><i class="bi bi-plus-square"></i>&nbsp; Adicionar Produto</a>
    </div>
</div>

<div class="container mt-3 pb-3">
    <table class="table table-hover my-auto" style="vertical-align: middle" width="100%" id="indexProdutos">
        <thead>
            <tr class="my-auto">
                <th data-priority="1">Titulo</th>
                <th data-priority="3">Desenvolvedor</th>
                <th data-priority="5">Gênero</th>
                <th data-priority="4">Plataforma</th>
                <th data-priority="2">Preço (R$)</th>
                <th data-priority="2"></th>
            </tr>
        </thead>
    </table>
</div>


@section Scripts{
<script src="~/js/produto.js"></script>
}