@model Empresa
@{
    if (Model.Id != 0) ViewData["Title"] = "Atualizar Usuário (CNPJ)";
    else ViewData["Title"] = "Adicionar Usuário (CNPJ)";
}

<style>
    body {
        background-image: radial-gradient(circle at center top, rgba(120, 0, 0, 100%) 0%, rgba(10, 10, 10, 50%) 35%), radial-gradient(circle at center bottom, rgba(120, 0, 0, 100%) 0%, rgba(10, 10, 10, 100%) 35%);
        background-size: 100%;
        background-repeat: no-repeat;
        background-position: top;
    }
</style>

<div class="container row mt-3">
    <div class="col-6">
        <h2 class="font-play">@(Model.Id != 0 ? "Atualizar" : "Adicionar") Empresa</h2>
    </div>
    <div class="col-6 text-end my-auto">
        <a asp-action="Index" class="btn btn-outline-light"><i class="bi bi-arrow-left-square"></i>&nbsp; Voltar</a>
    </div>
</div>

<form method="post">
    <div class="container row justify-content-around">
        <input asp-for="Id" readonly hidden />
        <div class="form-group row mt-3 col-12">
            <label asp-for="NomeEmpresa" class="form-label"></label>
            <input asp-for="NomeEmpresa" class="form-control" />
            <span asp-validation-for="NomeEmpresa" class="mt-2 text-danger"></span>
        </div>
        <div class="form-group row mt-3 col-6">
            <label asp-for="CNPJEmpresa" class="form-label"></label>
            <input asp-for="CNPJEmpresa" class="form-control" />
            <span asp-validation-for="CNPJEmpresa" class="mt-2 text-danger"></span>
        </div>
        <div class="form-group row mt-3 col-6">
            <label asp-for="TelefoneEmpresa" class="form-label"></label>
            <input asp-for="TelefoneEmpresa" class="form-control" />
            <span asp-validation-for="TelefoneEmpresa" class="mt-2 text-danger"></span>
        </div>
        <div class="form-group row mt-3 col-6">
            <label asp-for="LogradouroEmpresa" class="form-label"></label>
            <input asp-for="LogradouroEmpresa" class="form-control" />
            <span asp-validation-for="LogradouroEmpresa" class="mt-2 text-danger"></span>
        </div>
        <div class="form-group row mt-3 col-6">
            <label asp-for="CidadeEmpresa" class="form-label"></label>
            <input asp-for="CidadeEmpresa" class="form-control" /></input>
            <span asp-validation-for="CidadeEmpresa" class="mt-2 text-danger"></span>
        </div>
        <div class="form-group row mt-3 col-6">
            <label asp-for="EstadoEmpresa" class="form-label"></label>
            <input asp-for="EstadoEmpresa" class="form-control" />
            <span asp-validation-for="EstadoEmpresa" class="mt-2 text-danger"></span>
        </div>
        <div class="form-group row mt-3 col-6">
            <label asp-for="CEPEmpresa" class="form-label"></label>
            <input asp-for="CEPEmpresa" class="form-control" />
            <span asp-validation-for="CEPEmpresa" class="mt-2 text-danger"></span>
        </div>

        <div class="col-12 mt-1">
            @if (Model.Id != 0)
            {
                <button type="submit" class="btn btn-primary mt-3"><i class="bi bi-check-square"></i>&nbsp; Atualizar</button>
            }
            else
            {
                <button type="submit" class="btn btn-primary mt-3" onclick="return ValidateImage()"><i class="bi bi-check-square"></i>&nbsp; Adicionar</button>
            }
        </div>
    </div>
</form>

@section Scripts
{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}