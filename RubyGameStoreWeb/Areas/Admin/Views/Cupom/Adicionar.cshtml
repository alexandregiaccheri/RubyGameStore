@model Cupom
@{
    ViewData["Title"] = "Adicionar Cupom";
}

<style>
    body {
        background-image: radial-gradient(circle at center top, rgba(120, 0, 0, 100%) 0%, rgba(10, 10, 10, 50%) 35%), radial-gradient(circle at center bottom, rgba(120, 0, 0, 100%) 0%, rgba(10, 10, 10, 100%) 35%);
        background-size: 100%;
        background-repeat: no-repeat;
        background-position: top;
    }
</style>

<div class="row mt-3 p-2">
    <div class="col-6">
        <h2 class="font-play">Adicionar Cupom</h2>
    </div>
    <div class="col-6 text-end my-auto">
        <a asp-action="Index" class="btn btn-outline-light"><i class="bi bi-arrow-left-square"></i>&nbsp; Voltar</a>
    </div>
</div>

<form method="post">
    <input asp-for="Id" hidden readonly />

    <div class="row p-2 justify-content-around">
        <div class="form-group mt-3 col-12 col-md-6">
            <label asp-for="CodCupom" class="form-label"></label>
            <input asp-for="CodCupom" class="form-control" />
            <span asp-validation-for="CodCupom" class="text-danger mt-2"></span>
        </div>

        <div class="form-group mt-3 col-12 col-md-6">
            <label asp-for="ValidadeCupom" class="form-label"></label>
            <input asp-for="ValidadeCupom" class="form-control" value="" />
            <span asp-validation-for="ValidadeCupom" class="text-danger mt-2"></span>
        </div>

        <div class="form-group row px-0 col-12">
            <div class="form-group mt-3 col-12 col-md-6">
                <label asp-for="TipoDesconto" class="form-label"></label>
                <select asp-for="TipoDesconto" asp-items="ViewBag.ListaDesconto" class="form-select" id="selecaoTipo">
                    <option disabled selected>--Tipo de Desconto--</option>
                </select>
                <span asp-validation-for="TipoDesconto" class="mt-2 text-danger"></span>
            </div>

            <div class="form-group mt-3 col-12 col-md-6" id="porcento" style="display:none">
                <label asp-for="ValorDescontoPorcento" class="form-label"></label>
                <input asp-for="ValorDescontoPorcento" class="form-control" value="" />
                <span asp-validation-for="ValorDescontoPorcento" class="text-danger mt-2"></span>
            </div>

            <div class="form-group mt-3 col-12 col-md-6" id="reais" style="display:none">
                <label asp-for="ValorDescontoReais" class="form-label"></label>
                <input asp-for="ValorDescontoReais" class="form-control" value="" />
                <span asp-validation-for="ValorDescontoReais" class="text-danger mt-2"></span>
            </div>
        </div>

        <div class="form-group mt-3 col-12 col-md-4">
            <label asp-for="QuantidadeUsos" class="form-label"></label>
            <input asp-for="QuantidadeUsos" class="form-control" value="" />
            <span asp-validation-for="QuantidadeUsos" class="text-danger mt-2"></span>
        </div>

        <div class="form-group mt-3 col-12 col-md-4">
            <label asp-for="ValorMaximoDesconto" class="form-label"></label>
            <input asp-for="ValorMaximoDesconto" class="form-control" value="" />
            <span asp-validation-for="ValorMaximoDesconto" class="text-danger mt-2"></span>
        </div>

        <div class="form-group mt-3 col-12 col-md-4">
            <label asp-for="ValorRequerido" class="form-label"></label>
            <input asp-for="ValorRequerido" class="form-control" value="" />
            <span asp-validation-for="ValorRequerido" class="text-danger mt-2"></span>
        </div>

        <div class="form-group mt-3 col-12 col-md-6">
            <label asp-for="Descricao" class="form-label"></label>
            <textarea asp-for="Descricao" class="form-control" rows="5" style="padding: 0px !important"></textarea>
            <span asp-validation-for="Descricao" class="mt-2 text-danger"></span>
        </div>

        <div class="col-12 col-md-6 my-auto">
            <p class="alert-danger p-3">Não será possível alterar os dados do cupom após sua criação. Confira se todos os dados estão corretos antes de clicar no botão abaixo!</p>
            <button type="submit" class="btn btn-primary mb-3 col-12" style="width:auto">Criar Cupom</button>
        </div>
    </div>
</form>

@section Scripts
{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
<script src="~/js/AdicionarCupom.js"></script>
}