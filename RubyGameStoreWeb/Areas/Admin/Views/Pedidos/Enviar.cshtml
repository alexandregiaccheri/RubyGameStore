@model PedidoCabecalho
@{
    ViewData["Title"] = "Enviar";
}

<style>
    body {
        background-image: radial-gradient(circle at center top, rgba(120, 0, 0, 100%) 0%, rgba(10, 10, 10, 50%) 35%), radial-gradient(circle at center bottom, rgba(120, 0, 0, 100%) 0%, rgba(10, 10, 10, 100%) 35%);
        background-size: 100%;
        background-repeat: no-repeat;
        background-position: top;
    }
</style>

<div class="mt-3">
    <h2 class="text-center p-2 font-play">Registrar Envio</h2>
</div>

<hr />

<form method="post">
    <div class="container row mt-2 p-3 justify-content-center mx-auto">
        <input asp-for="Id" hidden readonly />
        <input asp-for="StatusPagamento" hidden readonly />
        <div class="col-12 col-md-7">
            <label asp-for="Transportadora" class="form-label"></label>
            <input asp-for="Transportadora" class="form-control" id="transportadora" />
            <span asp-validation-for="Transportadora" class="text-muted"></span>
        </div>
        <div class="col-12 col-md-7">
            <label asp-for="CodRastreio" class="form-label"></label>
            <input asp-for="CodRastreio" class="form-control" id="rastreio" />
            <span asp-validation-for="CodRastreio" class="text-muted"></span>
        </div>
        <div class="col-12 col-md-7">
            <button type="submit" onclick="return Validar()" class="btn-primary btn mx-auto mt-4" style="width:fit-content">Confirmar</button>
        </div>
    </div>
    <div class="text-end my-auto">
        <a asp-action="Detalhes" asp-route-Id="@Model.Id" class="btn btn-outline-light mb-2"><i class="bi bi-arrow-left-square"></i>&nbsp; Voltar</a>
    </div>
</form>

@section Scripts
{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
<script src="~/js/EnviarPedido.js"></script>
}