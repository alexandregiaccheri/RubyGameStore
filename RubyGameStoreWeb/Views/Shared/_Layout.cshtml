<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RubyGameStoreWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/custom-bootstrap.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/v/bs5/dt-1.11.5/r-2.2.9/datatables.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@sweetalert2/theme-dark@5/dark.css" />
    <link rel="stylesheet" href="~/css/tinymce.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RubyGameStoreWeb.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary" style="min-height:80px">
            <div class="container-fluid">
                <a class="navbar-brand px-4" asp-area="User" asp-controller="Home" asp-action="Index"><i class="bi bi-gem"></i>&nbsp; Ruby Game Store</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse align-content-center" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="User" asp-controller="Home" asp-action="Index">
                                Home
                                <span class="visually-hidden">(current)</span>
                            </a>
                        </li>                        
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Administração</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="#">TBD</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Pedidos" asp-action="Index">Pedidos</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Empresa" asp-action="Index">Clientes</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Empresa" asp-action="Index">Empresas</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Produto" asp-action="Index">Produtos</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Por Gênero</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="#">TBD</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Pedidos" asp-action="Index">Pedidos</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Empresa" asp-action="Index">Clientes</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Empresa" asp-action="Index">Empresas</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Produto" asp-action="Index">Produtos</a>
                            </div>                            
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Por Plataforma</a>
                            <div class="dropdown-menu" style="border: 1px solid black">
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Pedidos" asp-action="Index">Nintendo Switch</a>                                
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Empresa" asp-action="Index">PC</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Empresa" asp-action="Index">Playstation 4</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Produto" asp-action="Index">Playstation 5</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Produto" asp-action="Index">Xbox One</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Produto" asp-action="Index">Xbox Series</a>
                            </div>                            
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="https://github.com/alexandregiaccheri/RubyGameStore" target="_blank"><i class="bi bi-github"></i>&nbsp; Código-fonte</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container" style="min-height: calc(100vh - 140px);">
        <main role="main" style="min-height: calc(100vh - 140px);">
            <partial name="_ToastrNotifications" />
            @RenderBody()
        </main>
    </div>

    <footer class="footer bg-primary">
        <div class="container text-white">
            &copy; 2022 - Alexandre Giaccheri -
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>
    <script src="https://cdn.datatables.net/v/bs5/jq-3.6.0/dt-1.11.5/r-2.2.9/datatables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.8.4/moment.min.js"></script>
    <script src="https://cdn.datatables.net/plug-ins/1.11.5/dataRender/datetime.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/color-thief/2.3.2/color-thief.min.js"></script>
    <script src="https://cdn.tiny.cloud/1/kcgfkd7aoveq8bncs8xkhkul8ikvfuocpg2csc0d2lcf77zn/tinymce/5/tinymce.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
