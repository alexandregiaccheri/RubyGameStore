@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a class="nav-link text-white" asp-area="User" asp-controller="Carrinho" asp-action="Index"><i class="bi bi-cart"></i> @await Component.InvokeAsync("UnidadesCarrinho") - Carrinho</a>
    <a class="nav-link text-white" asp-area="User" asp-controller="MeusPedidos" asp-action="Index"><i class="bi bi-bag"></i> Pedidos</a>
    <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" id="manage" title="Manage"><i class="bi bi-person-circle"></i> @await Component.InvokeAsync("NomeUsuario")</a>
    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button id="logout" type="submit" class="nav-link btn btn-link text-white">Sair</button>
    </form>
}
else
{
    <a class="nav-link text-white" id="register" asp-area="Identity" asp-page="/Account/Register">Registrar</a>
    <a class="nav-link text-white" id="login" asp-area="Identity" asp-page="/Account/Login">Entrar</a>
}

