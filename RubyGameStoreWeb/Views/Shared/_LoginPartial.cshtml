@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager



    @if (SignInManager.IsSignedIn(User))
    {
        <a id="manage" class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-white">Logout</button>
        </form>
    }
    else
    {
        <a class="nav-link btn btn-outline-secondary text-white my-auto" style="min-width: 100px; max-width: 100px; margin-right: 3px" id="register" asp-area="Identity" asp-page="/Account/Register">Registrar</a>
        <a class="nav-link btn btn-secondary text-black my-auto" style="min-width: 100px; max-width: 100px; margin-left: 3px" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    }

